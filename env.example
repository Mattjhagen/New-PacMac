# PacMac Marketplace Production Environment Variables
# Copy this file to .env and fill in your actual API keys

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# X (Twitter) OAuth Configuration
X_CLIENT_ID=your-x-client-id
X_CLIENT_SECRET=your-x-client-secret

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_live_your_actual_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_actual_stripe_publishable_key_here

# SendGrid Email Service
SENDGRID_API_KEY=SG.your_actual_sendgrid_api_key_here
FROM_EMAIL=orders@pacmacmobile.com
FROM_NAME=PacMac Mobile

# Progressive Leasing
PROGRESSIVE_API_KEY=your_progressive_leasing_api_key_here
PROGRESSIVE_PARTNER_ID=PACMAC_MOBILE_001

# Nomad Internet
NOMAD_API_KEY=your_nomad_internet_api_key_here
NOMAD_RESELLER_ID=PACMAC001

# Apple Trade-In
APPLE_TRADE_API_KEY=your_apple_trade_in_api_key_here
APPLE_MERCHANT_ID=PACMAC_APPLE_001

# Dispute Contact Information
DISPUTE_EMAIL=disputes@pacmacmobile.com
DISPUTE_PHONE=(947) 225-4327

# ID Verification Service (Jumio)
JUMIO_API_KEY=your_jumio_api_key
JUMIO_API_SECRET=your_jumio_api_secret
JUMIO_BASE_URL=https://netverify.com/api/v4

# Plaid Bank Verification
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Address Verification (SmartyStreets)
SMARTYSTREETS_API_KEY=your_smartystreets_api_key
SMARTYSTREETS_AUTH_TOKEN=your_smartystreets_auth_token

# Base URL for callbacks
BASE_URL=https://new-pacmac.onrender.com

# Server Configuration
PORT=3000
NODE_ENV=production

# Database (for future use)
DATABASE_URL=your-database-url
